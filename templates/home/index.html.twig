{% extends 'base.html.twig' %}


{% block title %}Home{% endblock %}

{% block body %}
<div class="row m-0 bg-Success">

</div>

<h1 class="d-flex justify-content-center mt-5">Bienvenue chez Mille et une pages</h1>
    <h2 class="d-flex justify-content-center h4 my-1 mb-3">où les livres vous font voyager</h2>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner rounded">
        <div class="carousel-item active">
            <img class="d-block w-100 img-fluid" src="http://placehold.it/980x150" alt="pub1.jpg">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 img-fluid" src="http://placehold.it/980x150" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 img-fluid" src="http://placehold.it/980x150" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row my-2">
    <div class="col-12">
        <div class="card text-center mx-0 my-2 px-0">
            <div class="card-header">
            {#                        //#}
                <h2>{{ title }}</h2>
                {#                        #}
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item ">
                        <a class="nav-link  {% if sort == 1 %} active {% endif %}" href="{{ path('homeSort', {'sort': 1}) }}">Les nouveautés</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link {% if sort == 2 %} active {% endif %}" href="{{ path('homeSort', {'sort': 2}) }}">Les mieux notés</a>
                    </li>
                </ul>
            </div>
            <div class="card-body row d-flex justify-content-center">
            {# Boucle des produits du HomeController //#}
                {% if sort == 1  %}
                    {% for product in products %}
                        <div class="card col-3 col-md-1 px-0 my-2 mx-2 border-0">
                            <div class="card-img">
                                <a href="#" class="w-100">
                                    <img class="card-img img-fluid m-0" src="{{ asset('asset/pictures/products/' ~ product.ProductsPicture) }}" alt="{{ product.ProductsPicture }}">
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    {% for product in products %}
                        <div class="card col-3 col-md-1 px-0 my-2 mx-2 border-0">
                            <div class="card-img">
                                <a href="#" class="w-100">
                                    <img class="card-img img-fluid m-0" src="{{ asset('asset/pictures/products/' ~ product.ProductsPicture) }}" alt="{{ product.ProductsPicture }}">
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
