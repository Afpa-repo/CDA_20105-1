{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <div class="row my-2 mt-5">
        <div class="col-12">
            <div class="card text-center mx-0 my-2 px-0">
                <div class="card-header">
                    {#                        #}
                    <h1 class="d-flex justify-content-center h2">{{ title }}</h1>
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item ">
                            <a class="nav-link  {% if log == 1 %} active {% endif %}" href="{{ path('log', {'log': 1}) }}">Inscription !</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link {% if log == 2 %} active {% endif %}" href="{{ path('log', {'log': 2}) }}">Déjà inscrit ?</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body row d-flex justify-content-center">
                    {# Boucle des produits du HomeController //#}
                    {% if log == 1  %}
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-success mb-3">Inscription !</button>
                        {{ form_end(form) }}
                    {% else %}
                        <form action="{{ path('login') }}" method="post">
                            <div class="form-group">
                                <input placeholder="Adresse Email" required name="_username" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Connexion !</button>
                                <a class="btn btn-success" href="{{ path('home') }}" role="button">Retour à l'inscription</a>
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


