{% extends 'base.html.twig' %}

{% block title %}FRPersonnes index{% endblock %}

{% block body %}
    <h1>FRPersonnes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Personnes_Name</th>
                <th>Personnes_LastName</th>
                <th>Personnes_ClientCategory</th>
                <th>Personnes_Client</th>
                <th>Personnes_Team</th>
                <th>Personnes_Employee</th>
                <th>Personnes_Password</th>
                <th>Personnes_EnableAccount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.personnesName }}</td>
                <td>{{ personne.personnesLastName }}</td>
                <td>{{ personne.personnesClientCategory }}</td>
                <td>{{ personne.personnesClient }}</td>
                <td>{{ personne.personnesTeam }}</td>
                <td>{{ personne.personnesEmployee }}</td>
                <td>{{ personne.personnesPassword }}</td>
                <td>{{ personne.personnesEnableAccount }}</td>
                <td>
                    <a href="{{ path('personnes_show', {'id': personne.id}) }}">show</a>
                    <a href="{{ path('personnes_edit', {'id': personne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('personnes_new') }}">Create new</a>
{% endblock %}
